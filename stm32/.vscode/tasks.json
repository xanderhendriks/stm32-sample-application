{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "CubeProg: Flash project (SWD)",
            "command": "${env:CUBE_BUNDLE_PATH}/programmer/2.20.0/bin/STM32_Programmer_CLI",
            "args": [
                "--connect",
                "port=swd",
                "--download",
                "${command:cmake.launchTargetPath}",
                "-hardRst"
            ],
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "CubeProg: List all available communication interfaces",
            "command": "${env:CUBE_BUNDLE_PATH}/programmer/2.20.0/bin/STM32_Programmer_CLI",
            "args": [
                "--list"
            ],
            "problemMatcher": []
        },
        {
            "label": "Serial logger",
            "type": "shell",
            "command": "python -m serial.tools.miniterm ${input:serialPort} 115200",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "serialPort",
            "type": "promptString",
            "description": "Enter serial port (e.g. /dev/ttyACM0, COM5)",
            "default": "/dev/ttyACM0"
        }
    ]
}